{
  "name"    : "CometVisu",

  "include" :
  [
    {
      "path" : "${QOOXDOO_PATH}/tool/data/config/application.json"
    }
  ],

  "export" :
  [
    "build",
    "clean",
    "distclean",
    "dependencies",
    "fix",
    "info"
  ],

  "default-job" : "build",

  "let" :
  {
    "APPLICATION"  : "cv.io",
    "APPLICATION_NAME"  : "CometVisuClient",
    "QOOXDOO_PATH" : "../external/qooxdoo",
    "APPLICATION_MAIN_CLASS" : "${APPLICATION}.Client",
    "LOCALES"      : [],
    "CACHE"        : "${TMPDIR}/qx${QOOXDOO_VERSION}/cache",
    "ROOT"         : "."
  },


  "config-warnings" : {
    "job-shadowing": [ "common", "build", "build-script" ],
    "exclude": ["*"]
  },

  // You only need to edit the remainder of this file, if you want to customize
  // specific jobs, or add own job definitions.

  "jobs": {
    "common": {
      "=include" : [ "${APPLICATION}.*" ],
      //"=exclude" : [ "qx.*" ],
      "lint-check": { "allowed-globals": [ "cv" ] },
      "environment" : {
        "APPLICATION" : "${APPLICATION}",
        "qx.promise": false,
        "qx.theme" : null
      },
      "compile-options" :
      {
        "paths"  :
        {
          "loader-template": "${QOOXDOO_PATH}/tool/data/generator/oo.loader.tmpl.js"
        }
      }
    },

    "build" :
    {
      "desc"    : "create build version of current application",

      "run" :
      [
        "build-resources",
        "build-script",
        "build-files"
      ]
    },
    "build-script": {
      "compile-options" :
      {
        "paths" :
        {
          "file" : "${BUILD_PATH}/script/${APPLICATION_NAME}.js"
        }
      }
    }
  }
}
