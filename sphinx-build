:<<"::CMDLITERAL"
@ECHO OFF
GOTO :CMDSCRIPT
::CMDLITERAL

./docker-run ./cv doc $@
exit

:CMDSCRIPT
for /f %%a in ('docker ps -a -f name=cv_doc --quiet') do set "cid=%%a"
IF "%cid%"=="" (
    docker rm %cid%
)
ECHO "Creating 'cv_doc' container"
ECHO %~dp0
docker run --privileged --net=host -it -v %~dp0:%~dp0 --name cv_doc --workdir %~dp0 -e COMMAND="%" peuter/cv-doc-helper