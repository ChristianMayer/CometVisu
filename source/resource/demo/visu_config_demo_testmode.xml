              <address transform="DPT:1.001" variant="">13/0/1</address>
            </switch>
            <switch mapping="OnOff" styling="GreyGreen">
              <layout colspan="3"/>
              <label>Schrank</label>
              <address transform="DPT:1.001" variant="">13/0/2</address>
            </switch>
