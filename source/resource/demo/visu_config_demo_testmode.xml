          </group>
        </group>
        <group name="Licht mit Icons">
          <layout colspan="12"/>
          <group nowidget="true" flavour="lithium">
            <layout colspan="12"/>
            <switch mapping="OnOff_Licht" styling="GreyGrey">
              <layout colspan="3"/>
              <label>Strahler</label>
